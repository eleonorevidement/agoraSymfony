{% extends 'base.html.twig' %}

{% block title %}Item index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Item index</h1>

        <div class="row">
            {% for item in items %}
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card h-100">
                        <img src="{{ item.photo }}" class="card-img-top" alt="{{ item.name }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ item.name }}</h5>
                            <p class="card-text">{{ item.description }}</p>
                            <p class="card-text"><strong>Price:</strong> {{ item.price }}</p>
                            <p class="card-text"><strong>Category:</strong> {{ item.category }}</p>
                            <a href="{{ path('app_item_show', {'id': item.id}) }}" class="btn btn-primary btn-sm">Show</a>
                            {% if is_granted('ROLE_ADMIN') or app.user == item.seller and app.user != null %}
                                <a href="{{ path('app_item_edit', {'id': item.id}) }}" class="btn btn-secondary btn-sm">Edit</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p class="text-center">No records found</p>
                </div>
            {% endfor %}
        </div>

        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SELLER') %}
            <div class="text-center mt-4">
                <a href="{{ path('app_item_new') }}" class="btn btn-success">Create new</a>
            </div>
        {% endif %}
    </div>
{% endblock %}
