{% extends 'base.html.twig' %}

{% block title %}Item{% endblock %}

{% block body %}
    <h1>Item</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ item.id }}</td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ item.name }}</td>
        </tr>
        <tr>
            <th>Images</th>
            <td>{{ item.photo }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ item.description }}</td>
        </tr>
        <tr>
            <th>Prix</th>
            <td>{{ item.price }}</td>
        </tr>
        <tr>
            <th>Categorie</th>
            <td>{{ item.category }}</td>
        </tr>
        <tr>
            <th>Vendeur</th>
            {% if item.seller %}
            <td>{{ item.seller.email }}</td>
            {% else %}
            <td>-</td>
            {% endif %}
        </tr>



        </tbody>
    </table>

    {% if is_granted('ROLE_USER') and not is_granted('ROLE_SELLER') and not is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_cart_add', {id: item.id}) }}" class="btn btn-succes">Ajouter au panier</a>
    {% endif %}

    <a href="{{ path('app_item_index') }}">back to list</a>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_item_edit', {'id': item.id}) }}">edit</a>

        {{ include('item/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
