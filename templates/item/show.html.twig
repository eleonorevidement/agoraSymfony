{% extends 'base.html.twig' %}

{% block title %}Item{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Item</h1>

        <div class="row">
            <div class="col-md-6">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Titre</th>
                        <td>{{ item.name }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ item.description }}</td>
                    </tr>
                    <tr>
                        <th>Prix</th>
                        <td>{{ item.price }}</td>
                    </tr>
                    <tr>
                        <th>Categorie</th>
                        <td>{{ item.category }}</td>
                    </tr>
                    <tr>
                        <th>Vendeur</th>
                        {% if item.seller %}
                            <td>{{ item.seller.email }}</td>
                        {% else %}
                            <td>-</td>
                        {% endif %}
                    </tr>
                    </tbody>
                </table>

                {% if is_granted('ROLE_USER') and not is_granted('ROLE_SELLER') and not is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_cart_add', {id: item.id}) }}" class="btn btn-success">Ajouter au panier</a>
                {% endif %}

                <a href="{{ path('app_item_index') }}" class="btn btn-primary">Retour Ã  la liste</a>

                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_item_edit', {'id': item.id}) }}" class="btn btn-secondary">Modifier</a>
                    {{ include('item/_delete_form.html.twig') }}
                {% endif %}
            </div>
            <div class="col-md-6">
                <img src="{{ asset('uploads/item/' ~ item.photo) }}" class="img-fluid" alt="{{ item.name }}">
            </div>
        </div>
    </div>
{% endblock %}
