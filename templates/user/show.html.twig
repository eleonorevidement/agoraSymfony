{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <style>
        .user-account-container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
        }

        .user-account {
            background-color: #fff;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .profile-picture {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        .profile-picture img {
            border-radius: 50%;
            width: 150px;
            height: 150px;
            object-fit: cover;
            border: 2px solid #ddd;
        }

        .user-info {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .user-info div {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px;
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .user-info div strong {
            font-weight: bold;
            color: #333;
        }

        .actions {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }
    </style>

    <div class="user-account-container">
        <div class="user-account">
            <h2>User Account</h2>
            <div class="profile-picture">
                <img src="{{ user.profilePicture ? asset('img/' ~ user.profilePicture) : asset('img/profilePicture.png') }}" alt="{{ user.firstName }} {{ user.lastName }}">
            </div>
            <div class="user-info">
                <div>
                    <strong>Email:</strong>
                    <span>{{ user.email }}</span>
                </div>
                <div>
                    <strong>Roles:</strong>
                    <span>{{ user.roles ? user.roles|json_encode : '' }}</span>
                </div>
                <div>
                    <strong>First Name:</strong>
                    <span>{{ user.firstName }}</span>
                </div>
                <div>
                    <strong>Last Name:</strong>
                    <span>{{ user.lastName }}</span>
                </div>
            </div>
            <div class="actions">
                <a href="{{ path('app_user_index') }}" class="btn btn-primary">Back to list</a>
                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-secondary">Edit</a>
                {{ include('user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
