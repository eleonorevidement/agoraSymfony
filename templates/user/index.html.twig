{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">User index</h1>

        <div class="row">
            {% for user in users %}
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card h-100">
                        <img src="{{ user.profilePicture }}" class="card-img-top" alt="{{ user.firstName }} {{ user.lastName }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ user.firstName }} {{ user.lastName }}</h5>
                            <p class="card-text"><strong>Email:</strong> {{ user.email }}</p>
                            <p class="card-text"><strong>Roles:</strong> {{ user.roles ? user.roles|json_encode : '' }}</p>
                            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-primary btn-sm">Show</a>
                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-secondary btn-sm">Edit</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p class="text-center">No records found</p>
                </div>
            {% endfor %}
        </div>

        <div class="text-center mt-4">
            <a href="{{ path('app_register_by_admin') }}" class="btn btn-success">Create new</a>
        </div>
    </div>
{% endblock %}
