{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <style>
        .custom-input {
            border-radius: 0.375rem;
            border: 1px solid #ced4da;
            padding: 0.375rem 0.75rem;
            width: 100%;
            font-size: 1rem;
            line-height: 1.5;
            color: #495057;
            background-color: #fff;
            background-clip: padding-box;
            box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.075);
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }

        .custom-input:focus {
            border-color: #80bdff;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

        .small-text {
            font-size: 0.875rem;
            color: #6c757d;
        }
    </style>

    <div class="container mt-5">
        <div class="text-center mb-4">
            <h1 class="py-2 px-3">Inscription</h1>
        </div>

        {{ form_errors(registrationForm) }}

        <div class="d-flex justify-content-center">
            <div class="w-50">
                {{ form_start(registrationForm, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                <div class="mb-4">
                    {{ form_widget(registrationForm.firstName, {'attr': {'class': 'custom-input', 'placeholder': 'Prénom'}}) }}
                    {{ form_errors(registrationForm.firstName) }}
                </div>

                <div class="mb-4">
                    {{ form_widget(registrationForm.lastName, {'attr': {'class': 'custom-input', 'placeholder': 'Nom'}}) }}
                    {{ form_errors(registrationForm.lastName) }}
                </div>

                <div class="mb-4">
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'custom-input', 'placeholder': 'E-mail'}}) }}
                    {{ form_errors(registrationForm.email) }}
                </div>

                <div class="mb-4">
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'custom-input', 'placeholder': 'Mot de passe'}}) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>

                <div class="mb-4">
                    {{ form_widget(registrationForm.roles, {'attr': {'class': 'custom-input', 'placeholder': 'Rôles'}}) }}
                    {{ form_errors(registrationForm.roles) }}
                </div>

                <div class="mb-4 form-check">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                    <label for="{{ registrationForm.agreeTerms.vars.id }}" class="form-check-label small-text mb-2">J'accepte les conditions</label>
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary btn-lg">S'inscrire</button>
                </div>

                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
